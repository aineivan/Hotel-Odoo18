<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_invoice_payment.CreatePaymentPopup" owl="1">
        <Dialog title="props.title || 'Register Payment'">
            <div class="modal-body">
                <div class="mb-3">
                    <div><strong t-esc="props.invoice.name || props.invoice.payment_reference"/></div>
                    <div t-esc="props.invoice.partner_name"/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Journal</label>
                    <select class="form-select" t-model="state.journal_id">
                        <t t-foreach="state.journals" t-as="j" t-key="j.id">
                            <option t-att-value="j.id" t-esc="j.name"/>
                        </t>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Amount</label>
                    <input type="number" class="form-control" t-model="state.amount"/>
                </div>
            </div>

            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="cancel">Cancel</button>
                <button class="btn btn-primary o-default-button" t-on-click="confirm">Confirm</button>
            </t>
        </Dialog>
    </t>

</templates>
