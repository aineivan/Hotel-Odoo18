<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Place the Invoices button directly above the Numpad (Qty/Price/Disc panel) -->
    <t t-name="pos_invoice_payment.ProductScreenInvoicesButton"
       t-inherit="point_of_sale.ProductScreen"
       t-inherit-mode="extension">

        <!-- Insert just before the Numpad component -->
        <xpath expr="//Numpad" position="before">
            <div class="control-buttons">
                <button class="control-button"
                        t-on-click="() => this.onClickInvoicePayments()">
                    <i class="fa fa-file-invoice-dollar me-1" role="img" aria-label="Invoices" title="Invoices"/>
                    Invoices
                </button>
            </div>
        </xpath>
    </t>

</templates>
