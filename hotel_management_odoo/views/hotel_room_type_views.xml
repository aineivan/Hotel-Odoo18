<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Room Type Tree (List) View -->
    <record id="view_hotel_room_type_tree" model="ir.ui.view">
        <field name="name">hotel.room.type.tree</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <list string="Room Types" editable="bottom">
                <field name="name"/>
                <field name="num_person"/>
            </list>
        </field>
    </record>

    <!-- Room Type Form View -->
    <record id="view_hotel_room_type_form" model="ir.ui.view">
        <field name="name">hotel.room.type.form</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <form string="Room Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="num_person"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Room Type Action -->
    <record id="action_hotel_room_type" model="ir.actions.act_window">
        <field name="name">Room Types</field>
        <field name="res_model">hotel.room.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new room type.
            </p><p>
                Define the different types of rooms available in your hotel, like 'Single', 'Double', or 'Suite', and set their capacity.
            </p>
        </field>
    </record>

    <!-- Room Type Menu Item -->
    <menuitem id="menu_hotel_room_type"
              name="Room Types"
              parent="hotel_config_menu"
              action="action_hotel_room_type"
              sequence="21"/>
</odoo>
