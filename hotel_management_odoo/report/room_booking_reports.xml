<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_room_booking" model="ir.actions.report">
        <field name="name">Room Booking Order</field>
        <field name="model">room.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hotel_management_odoo.report_room_booking</field>
        <field name="report_file">hotel_management_odoo.report_room_booking</field>
        <field name="binding_model_id" ref="model_room_booking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_room_booking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Room Booking</h2>
                        <br/>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-start">Sl No.</th>
                                    <th class="text-start">Guest Name</th>
                                    <th class="text-start">Room No.</th>
                                    <th class="text-start">Check-In</th>
                                    <th class="text-start">Check-Out</th>
                                    <th class="text-start">Reference No.</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="i" t-value="0"/>
                                <t t-foreach="doc.room_line_ids" t-as="line">
                                    <t t-set="i" t-value="i+1"/>
                                    <tr>
                                        <td>
                                            <span t-esc="i"/>
                                        </td>
                                        <td>
                                            <span t-field="doc.partner_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.room_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.checkin_date" t-options='{"widget": "datetime"}'/>
                                        </td>
                                        <td>
                                            <span t-field="line.checkout_date" t-options='{"widget": "datetime"}'/>
                                        </td>
                                        <td>
                                            <span t-field="doc.name"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>