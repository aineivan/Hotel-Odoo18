<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_room_booking" model="ir.actions.report">
        <field name="name">Room Booking Order</field>
        <field name="model">room.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hotel_management_odoo.report_room_booking</field>
        <field name="report_file">hotel_management_odoo.report_room_booking</field>
        <field name="binding_model_id" ref="model_room_booking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_room_booking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <div class="text-center mt-4 mb-4">
                            <h2><strong>BOOKING CONFIRMATION</strong></h2>
                            <p class="h4">REF : #<span t-field="doc.name"/></p>
                        </div>

                        <div class="row" style="border-top: 1px solid black; border-bottom: 1px solid black; padding: 8px 0; font-weight: bold; height: 40px;">
                            <div class="col-4">Room</div>
                            <div class="col-2">Check in</div>
                            <div class="col-2">Check out</div>
                            <div class="col-2 text-center">Nights</div>
                            <div class="col-2">Payment</div>
                        </div>
                        
                        <t t-foreach="doc.room_line_ids" t-as="line">
                            <div class="row" style="padding: 8px 0; border-bottom: 1px solid #dee2e6;">
                                <div class="col-4">
                                    <span t-field="line.room_id.name"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="line.checkin_date" t-options="{'widget': 'date', 'format': 'MMM d, y'}"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="line.checkout_date" t-options="{'widget': 'date', 'format': 'MMM d, y'}"/>
                                </div>
                                <div class="col-2 text-center">
                                    <span t-esc="int(line.uom_qty)"/>
                                </div>
                                <div class="col-2">
                                    <t t-if="doc.invoice_status == 'invoiced' and doc.hotel_invoice_id.payment_state == 'paid'">
                                        <span class="text-success">PAID &amp; CONFIRMED</span>
                                    </t>
                                    <t t-elif="doc.state in ['reserved', 'check_in']">
                                        <span>CONFIRMED</span>
                                    </t>
                                    <t t-else="">
                                        <span>PENDING</span>
                                    </t>
                                </div>
                            </div>
                        </t>

                        <!-- TERMS & CONDITIONS -->
                        <div class="row mt-4" style="border-top: 1px solid black; border-bottom: 1px solid black;">
                            <div class="col-3" style="font-weight: bold; padding: 8px; border-right: 1px solid black;">
                                TERMS & CONDITIONS
                            </div>
                            <div class="col-9" style="padding: 8px;">
                                <p class="mt-2">
                                    <strong>1. Cancellation policy:</strong> Free Cancellation 1 day before checkin<br/>
                                    <strong>2. Payment terms:</strong> Before or at checkin<br/>
                                    <strong>3. Extras:</strong> 30 minutes massage for 1, fast wifi, One way airport shuttle when arrival / departure details are shared, late/extended checkout to 12 noon or half night price up to 8pm, and complimentary breakfast.
                                </p>
                            </div>
                        </div>

                        <!-- EXTRAS -->
                        <div class="row" style="border-bottom: 1px solid black;">
                            <div class="col-3" style="font-weight: bold; padding: 8px; border-right: 1px solid black;">
                                EXTRAS
                            </div>
                            <div class="col-9" style="padding: 8px;">
                                <ul class="list-unstyled mb-0">
                                    <t t-if="not doc.service_line_ids and not doc.vehicle_line_ids">
                                        <li>No extras selected.</li>
                                    </t>
                                    <li t-foreach="doc.service_line_ids" t-as="service_line">
                                        <span t-field="service_line.service_id.name"/>
                                    </li>
                                    <li t-foreach="doc.vehicle_line_ids" t-as="vehicle_line">
                                        Vehicle: <span t-field="vehicle_line.fleet_id.name"/>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- CUSTOMER DETAILS -->
                        <div class="row mt-5">
                            <div class="col-6">
                                <h3>Customer details</h3>
                                <ul class="list-unstyled">
                                    <li><strong>Customer Name:</strong> <span t-field="doc.partner_id.name"/></li>
                                    <li><strong>Email address:</strong> <span t-field="doc.partner_id.email"/></li>
                                    <li><strong>Phone:</strong> <span t-field="doc.partner_id.phone"/></li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <h3>Address</h3>
                                <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
