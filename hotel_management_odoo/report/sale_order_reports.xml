<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_sale_order" model="ir.actions.report">
        <field name="name">Sale Order</field>
        <field name="model">room.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hotel_management_odoo.report_sale_order</field>
        <field name="report_file">hotel_management_odoo.report_sale_order</field>
        <field name="binding_model_id" ref="model_room_booking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_sale_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>Sale Order</h2>
                        <br/>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-start">Sl No.</th>
                                    <th class="text-start">Guest Name</th>
                                    <th class="text-start">Check-In</th>
                                    <th class="text-start">Check-Out</th>
                                    <th class="text-start">Reference No.</th>
                                    <th class="text-end">Amount Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="i" t-value="1"/>
                                <tr>
                                    <td>
                                        <span t-esc="i"/>
                                    </td>
                                    <td>
                                        <span t-field="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="doc.checkin_date" t-options='{"widget": "datetime"}'/>
                                    </td>
                                    <td>
                                        <span t-field="doc.checkout_date" t-options='{"widget": "datetime"}'/>
                                    </td>
                                    <td>
                                        <span t-field="doc.name"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
