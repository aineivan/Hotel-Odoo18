<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_sale_order" model="ir.actions.report">
        <field name="name">Accommodation Voucher</field>
        <field name="model">room.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hotel_management_odoo.report_sale_order</field>
        <field name="report_file">hotel_management_odoo.report_sale_order</field>
        <field name="binding_model_id" ref="model_room_booking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_sale_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <div class="text-center mt-4 mb-4">
                            <h2><strong>ACCOMMODATION VOUCHER</strong></h2>
                            <p class="h4">VOUCHER #<span t-field="doc.name"/></p>
                        </div>

                        <div class="row" style="border-top: 1px solid black; border-bottom: 1px solid black; padding: 8px 0;">
                            <div class="col-4"><strong>Room</strong></div>
                            <div class="col-2"><strong>Check in</strong></div>
                            <div class="col-2"><strong>Check out</strong></div>
                            <div class="col-1 text-center"><strong>Nights</strong></div>
                            <div class="col-3"><strong>Payment</strong></div>
                        </div>
                        
                        <t t-foreach="doc.room_line_ids" t-as="line">
                            <div class="row" style="padding: 8px 0; border-bottom: 1px solid #dee2e6;">
                                <div class="col-4">
                                    <span t-field="line.room_id.name"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="line.checkin_date" t-options="{'widget': 'date', 'format': 'MMM d, y'}"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="line.checkout_date" t-options="{'widget': 'date', 'format': 'MMM d, y'}"/>
                                </div>
                                <div class="col-1 text-center">
                                    <span t-esc="int(line.uom_qty)"/>
                                </div>
                                <div class="col-3">
                                    <t t-if="doc.invoice_status == 'invoiced' and doc.hotel_invoice_id.payment_state == 'paid'">
                                        <span class="text-success">PAID &amp; CONFIRMED</span>
                                    </t>
                                    <t t-elif="doc.state == 'reserved'">
                                        <span>CONFIRMED</span>
                                    </t>
                                    <t t-else="">
                                        <span>PENDING</span>
                                    </t>
                                </div>
                            </div>
                        </t>

                        <div class="row mt-4">
                            <div class="col-3" style="background-color: #f2f2f2; padding: 8px;">
                                <strong>SERVICES &amp; EXTRAS</strong>
                            </div>
                            <div class="col-9" style="padding: 8px;">
                                <ul class="list-unstyled">
                                    <t t-if="not doc.service_line_ids and not doc.vehicle_line_ids">
                                        <li>No extras selected.</li>
                                    </t>
                                    <li t-foreach="doc.service_line_ids" t-as="service_line">
                                        <span t-field="service_line.service_id.name"/>
                                    </li>
                                    <li t-foreach="doc.vehicle_line_ids" t-as="vehicle_line">
                                        Vehicle: <span t-field="vehicle_line.fleet_id.name"/>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-6">
                                <h3>Customer details</h3>
                                <ul class="list-unstyled">
                                    <li><strong>Customer Name:</strong> <span t-field="doc.partner_id.name"/></li>
                                    <li><strong>Email address:</strong> <span t-field="doc.partner_id.email"/></li>
                                    <li><strong>Phone:</strong> <span t-field="doc.partner_id.phone"/></li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <h3>Address</h3>
                                <address t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                <t t-if="doc.customer_note">
                                    <p><strong>Additional Information:</strong> <span t-field="doc.customer_note"/></p>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>